# === DATABASE (Neon — Phase 1) ===
DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require&channel_binding=require

# === AUTH (Clerk) ===
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_xxx
CLERK_SECRET_KEY=sk_live_xxx

# === AI PROVIDERS ===
ANTHROPIC_API_KEY=sk-ant-api03-xxx
OPENAI_API_KEY=sk-proj-xxx
CLAUDE_MODEL=claude-sonnet-4-20250514

# === CLOUDFLARE R2 (File Storage) ===
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=reqvolt-files
R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com
R2_REGION=auto

# === INNGEST (Background Jobs) ===
INNGEST_SIGNING_KEY=signkey-prod-xxx
INNGEST_EVENT_KEY=your_event_key

# === RATE LIMITING ===
LLM_RATE_LIMIT_RPM=10
LLM_TOKEN_BUDGET_MONTHLY=500000

# === REDIS (Upstash — Optional, caching/rate-limit) ===
REDIS_URL=https://xxx.upstash.io
UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_token

# === OBSERVABILITY ===
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
LANGFUSE_PUBLIC_KEY=pk-lf-xxx
LANGFUSE_SECRET_KEY=sk-lf-xxx
LANGFUSE_HOST=https://cloud.langfuse.com

# === INTEGRATIONS — Monday.com (Phase 3) ===
MONDAY_API_TOKEN=your_monday_token

# === INTEGRATIONS — Jira Cloud (Phase 3) ===
JIRA_HOST=https://your-domain.atlassian.net
JIRA_USER_EMAIL=your@email.com
JIRA_API_TOKEN=your_jira_token

# === ENCRYPTION (Required for Jira token storage) ===
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_32_byte_hex_key

# === APP ===
NEXT_PUBLIC_APP_URL=http://localhost:3000

