# =============================================================================
# Reqvolt Environment Variables
# Copy this file to .env.local and fill in your values
# =============================================================================

# --- Database (Neon PostgreSQL) ---
DATABASE_URL="postgresql://user:pass@ep-xxx-pooler.region.aws.neon.tech/dbname?sslmode=require"
DIRECT_URL="postgresql://user:pass@ep-xxx.region.aws.neon.tech/dbname?sslmode=require"

# --- Auth (Clerk) ---
CLERK_SECRET_KEY="sk_test_xxx"
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_xxx"

# --- AI ---
ANTHROPIC_API_KEY="sk-ant-xxx"
OPENAI_API_KEY="sk-xxx"
CLAUDE_MODEL="claude-sonnet-4-20250514"
CLAUDE_HAIKU_MODEL="claude-haiku-4-5-20251001"

# --- Admin (quality dashboard) — optional, comma-separated Clerk user IDs ---
ADMIN_USER_IDS=""

# --- Background Jobs (Inngest) ---
INNGEST_SIGNING_KEY=""
INNGEST_EVENT_KEY=""

# --- File Storage (Cloudflare R2) ---
R2_ACCOUNT_ID=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET_NAME="reqvolt-dev"
R2_ENDPOINT="https://xxx.r2.cloudflarestorage.com"

# --- Caching (Upstash Redis) — optional ---
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""
