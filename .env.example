# --- Email (Resend) — optional ---
RESEND_API_KEY=""
EMAIL_FROM="Reqvolt <notifications@reqvolt.com>"

# --- Inbound Email (SendGrid) — optional ---
SENDGRID_WEBHOOK_SECRET=""
INBOUND_EMAIL_DOMAIN=""

# --- Jira OAuth — optional ---
JIRA_CLIENT_ID=""
JIRA_CLIENT_SECRET=""
JIRA_REDIRECT_URI="http://localhost:3000/api/integrations/jira/callback"
JIRA_OAUTH_STATE_SECRET=""

# --- Monday.com — optional ---
MONDAY_API_TOKEN=""

# --- Monitoring (Sentry) — optional ---
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# --- LLM Observability (Langfuse) — optional ---
LANGFUSE_PUBLIC_KEY=""
LANGFUSE_SECRET_KEY=""
LANGFUSE_HOST="https://cloud.langfuse.com"

# --- App ---
NEXT_PUBLIC_APP_URL="http://localhost:3000"
